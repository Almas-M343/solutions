// // For4. Напишите программу, которая использует цикл для приема неопределенного числа целочисленных входов и вычисляет сумму записей. Когда пользователь вводит значение «0», выведите результат и выйдите из программы.
#include
using namespace std;
int main(void){
int sum=0;
// переменная для суммы со значением 0
for(int i=0;;i++){
// запускаем цикл без ограничения
cout<<"input num:"<<endl;
// просим ввод переменной
int num;
// переменная бех значения
cin>>num;
// чтение
if(num<=0){
break;
// при занчение меньше 0 или = 0 прекращаем
}else{
sum+=num;
// при получение 0,суммируюся переменные предыдущие переменные
}
}cout<<sum;
return 0;
}
